{% for ownedCryptocurrency in portfolio.cryptocurrencies %}
    <form action="" method="POST">
        <div data-abbreviation="{{ ownedCryptocurrency.abbreviation }}-sell" style="padding-bottom: 5px">
            <span class="owned-cryptocurrency"> {{ ownedCryptocurrency.name }} ({{ ownedCryptocurrency.abbreviation }}) - {{ ownedCryptocurrency.quantity }} - ${{ ownedCryptocurrency.worthInUSD }}</span>
            {#<input type="text" name="transaction-amount">#}
            <button type="submit" class="sell-crypto" data-toggle="popover" title="Sell" name="crypto-worth" value="{{ cryptocurrency.worthInUSD }}">Sell</button>
            <input type="hidden" value="{{ ownedCryptocurrency.id }}" name="cryptocurrency-id">
            <input type="hidden" name="type" value="sell">
        </div>
    </form>
{% endfor %}