{% extends 'Layout.html.twig' %}

{% block content %}
    <h3 class="welcome">Profile: {{ publicUser.nickname }}</h3>
    <h4>Information</h4>
    <div>
        <p>Country: {{  publicUser.country }}</p>
    </div>
    {% if isUserOnFriendsList %}
        {% include 'UsersAreFriends.html.twig' %}
    {% elseif isFriendRequestAwaitingResponse %}
        {% include 'FriendRequestSent.html.twig' %}
    {% else %}
        {# Not friends #}
        {% include 'SendFriendRequest.html.twig' %}
    {% endif %}
{% endblock %}