{% extends 'Layout.html.twig' %}

{% block content %}
    {% include 'GenericHeader.html.twig' %}
    {% include 'FlashMessages.html.twig' %}

    <div class="registration-container">
        <h3 class="create-account-text text-center">Create a New Account</h3>
        <form class="register-form" method="post" action="">
            <div class="row">
                <div class="col-sm-2 offset-sm-5">
                    <label for="nickname">Nickname</label>
                    <input type="text" class="form-control" name="nickname" id="nickname"><br>
                    <label for="country">Country</label>
                    <input type="text" class="form-control" name="country" id="country"><br>
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password"><br>
                    <input type="hidden" name="token"
                           value="{{ get_token('registration') }}">
                    {#<input class="register-button" type="submit" value="Register">#}
                    <div class="text-center">
                        <button class="register-button btn btn-primary" type="submit">Register</button>
                    </div>

                </div>
            </div>

        </form>
    </div>

    {% include 'resources/Header.html.twig' %}
    {% include 'resources/Registration.html.twig' %}
{% endblock %}