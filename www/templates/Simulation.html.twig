    <div class="modal fade" id="leaderboardModal" tabindex="-1" role="dialog" aria-labelledby="leaderboardModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="leaderboardModalLabel">Leaderboard</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <ul class="nav nav-tabs" id="leaderboard-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="global-leaderboard-tab" data-toggle="tab" href="#global-leaderboard" role="tab" aria-controls="global-leaderboard" aria-selected="true">Global</a>
                        </li>
                        {% if not portfolio.groupId == null %}
                            <li class="nav-item">
                                <a class="nav-link" id="group-leaderboard-tab" data-toggle="tab" href="#group-leaderboard" role="tab" aria-controls="group-leaderboard" aria-selected="false">Group</a>
                            </li>
                        {% endif %}
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="global-leaderboard" role="tabpanel" aria-labelledby="global-leaderboard-tab">
                            <table id="leaderboard-table" class="display">
                                <thead>
                                <tr>
                                    <th>Position</th>
                                    <th>Username</th>
                                    <th>Portfolio Title</th>
                                    <th>Portfolio Worth</th>
                                </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                        {% if not portfolio.groupId == null %}
                            <div class="tab-pane fade" id="group-leaderboard" role="tabpanel" aria-labelledby="group-leaderboard-tab">
                                <table id="group-leaderboard-table" class="display">
                                    <thead>
                                    <tr>
                                        <th>Position</th>
                                        <th>Username</th>
                                        <th>Portfolio Title</th>
                                        <th>Portfolio Worth</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

